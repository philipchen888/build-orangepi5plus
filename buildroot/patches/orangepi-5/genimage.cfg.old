image boot.vfat {
	vfat {
		files = {
			"Image",
			"rk3588-orangepi-5-plus.dtb"
		}

		file extlinux/extlinux.conf {
			image = extlinux.conf
		}
	}

	size = 512M
}

image sdcard.img {
	hdimage {
	}

	partition uboot {
		image = "u-boot-rockchip.bin"
		offset = 32K
	}

	partition boot {
		partition-type = 0xC
		bootable = "true"
		image = "boot.vfat"
		offset = 16M
	}

	partition rootfs {
		partition-type = 0x83
		image = "rootfs.ext4"
	}
}
